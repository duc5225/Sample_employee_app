<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/list_item_avatar"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/list_item_avatar"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_name"
        android:layout_marginVertical="5dp"
        android:layout_toEndOf="@id/list_item_avatar"
        android:text="Role"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/list_item_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_role"
        android:layout_toEndOf="@id/list_item_avatar"
        android:text="Others"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/list_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        android:layout_marginHorizontal="10dp"/>

    <ImageButton
        android:id="@+id/list_item_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/list_item_delete_button"
        app:srcCompat="@drawable/ic_baseline_edit_24"
        android:background="@color/transparent"
        android:layout_alignTop="@+id/list_item_delete_button"/>


</RelativeLayout>